<configuration debug="true">
    <property name="logback.rollingPattern" value="%d{yyyy-MM-dd}.gz"/>
    <property name="logback.fullPattern" value="%d{&quot;yyyy-MM-dd&apos;T&apos;HH:mm:ss,SSSZ&quot;} [%thread][%marker][%X{req.remoteHost}][%X{remoteAddress}][%X{req.xForwardedFor}][%X{orgid}][%X{userid}][%X{customerNo}][%X{X-EVRY-ESB-CLIENTNAME}][%X{loginContext}][%X{logref}] %level %logger - %msg%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{2}:%L): %msg%n%throwable</pattern>
        </encoder>
    </appender>


    <!-- Standard File-appender which directs output to file -->
    <appender name="LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>logs/app.log.${logback.rollingPattern}</fileNamePattern>
            <maxHistory>1</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${logback.fullPattern}</pattern>
        </encoder>
    </appender>


    <!-- Standard File-appender which directs output to file -->
    <appender name="SOME_IMPORTANT_LOGGING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator>
                <expression>
<!--                    return true;-->
                    return (marker != null) &amp;&amp; (marker.contains("IMPORTANT"));
                </expression>
            </evaluator>
            <OnMismatch>DENY</OnMismatch>
            <OnMatch>ACCEPT</OnMatch>
        </filter>
        <file>logs/app-imp.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>logs/app-imp.log.${logback.rollingPattern}</fileNamePattern>
            <maxHistory>1</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${logback.fullPattern}</pattern>
        </encoder>
    </appender>



    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="com.bankapi">
        <appender-ref ref="SOME_IMPORTANT_LOGGING"/>
        <level value="DEBUG" />
    </logger>

    <logger name="com.bankapi.logging">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="LOGFILE"/>
        <level value="DEBUG" />
    </logger>

</configuration>